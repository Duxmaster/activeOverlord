<div class='container'>
	<form action="/user/update/<%= user.id %>" method="POST" class='form-signin'>
		<h2> Editing User </h2>

		<div> Name: <input value="<%= user.name %>" name="name" type="text" class="input-block-level"/></div>
		<div>Title: <input value="<%= user.title %>" name="title" type="text" class="input-block-level"/></div>
		<div>Email Address: <input value="<%= user.email %>" name="email" type="text" class="input-block-level"/></div>
		<% if (session.User && session.User.admin) { %>
			<% if (user.admin) { %>
				<input type="hidden" name="admin" value="unchecked">
				<label class="checkbox"><input type="checkbox" name="admin" checked> Admin</label>
			<% } else { %>
				<input type="hidden" name="admin" value="unchecked">
				<label class="checkbox"><input type="checkbox" name="admin"> Admin</label>
			<% } %> 
		<% } %> 
		<input type="submit" class="btn btn-medium btn-primary"/>
		<input type="hidden" name="_csrf" value="<%= _csrf %>" />
	</form>
</div>