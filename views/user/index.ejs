<div class="container">
	<h3>Users</h3>
	<table class='table'>
		<tr>
			<th>Status</th>
			<th>ID</th>
			<th>Name</th>
			<th>Title</th>
			<th>Email</th>
			<th>Admin</th>
			<th></th>
			<th></th>
		</tr>

		<!--
		<% for(user in users) { %>
		<tr>
		<td><%= users[user].name %></td>
		<td><%= users[user].email %></td>
		<td><a href="/user/show/<%= user.id %>">Show</a></td>
		<% } %>
		</tr>
		</table>
		<br />
		-->

		

		<% _.each(users, function(user) { %>
		<tr data-id="<%= user.id %>" data-model="user">
			<% if (user.online) { %>
				<td><img src="/images/icon-online.png"></td>
			<% } else { %>
				<td> <img src="/images/icon-offline.png"></td>
			<% } %>
			<td><%= user.id %></td>
			<td><%= user.name %></td>
			<td><%= user.title %></td>
			<td><%= user.email %></td>
			<% if (user.admin) { %>
				<td> <i class="icon-ok"></i>
			<% } else { %>
				<td> <i class="icon-remove"></i>
			<% } %>	
			<td><a href="/user/show/<%= user.id %>" class="btn btn-small btn-primary">Show</a></td>
			<td><a href="/user/edit/<%= user.id %>" class="btn btn-small btn-warning">Edit</a></td>
			<td><a href="/user/destroy/<%= user.id %>" class="btn btn-small btn-danger">Delete</a></td>
		</tr> 

		<% }) %>
	</table>
	<br />
	<a href="/user/new">New User</a>
</div>
